{
  "name": "@ccbas/pec-graphql-shield",
  "version": "7.6.7",
  "author": "Matic Zavadlal <matic.zavadlal@gmail.com>",
  "license": "MIT",
  "contributors": [
    "Rasmus Letterkrantz <rasmus@soundboks.com>",
    "Sander Blomv√•gnes <sander@blinq.no>"
  ],
  "repository": {
    "url": "git://github.com/ccbas/pec-graphql-shield.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "main": "./index.js",
  "module": "./index.js",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json",
    "./*": "./*"
  },
  "scripts": {
    "prepare": "husky",
    "test": "vitest tests",
    "test:ci": "vitest --coverage",
    "prerelease": "npm run build",
    "prettier": "prettier --ignore-path .gitignore --write --list-different \"**/*.{ts,tsx,graphql,yml}\"",
    "transpile": "tsc --project tsconfig.build.json",
    "build": "npm run build:clean && npm run transpile && cp package.json ./dist",
    "build:watch": "chokidar \"src/*.*\"  -c \"npm run build\" --initial",
    "build:docs": "typedoc",
    "build:clean": "rimraf ./dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix"
  },
  "dependencies": {
    "graphql-tag": "^2.12.6",
    "object-hash": "^3.0.0",
    "yup": "^1.7.1"
  },
  "peerDependencies": {
    "graphql": "^16.11.0",
    "graphql-middleware": "^6.1.35"
  },
  "devDependencies": {
    "@apollo/server": "5.0.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@graphql-tools/schema": "8.5.1",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "24.3.0",
    "@types/object-hash": "3.0.6",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "graphql": "16.11.0",
    "graphql-middleware": "6.1.35",
    "husky": "9.1.7",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "semantic-release": "25.0.3",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4"
  }
}
